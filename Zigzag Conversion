class Solution(object):
    def convert(self, s, numRows):
        if numRows == 1 or numRows >= len(s):
            return s

        #creating row 
        rows = [""]*numRows
        curr_rows = 0
        direction = -1

        for char in s:
            rows[curr_rows] += char

            #change direction
            if curr_rows == 0 or curr_rows == numRows - 1:
                direction *= -1

            curr_rows += direction
        return "".join(rows)    
        
